{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "rootDir": "./src",
    "baseUrl": "./src",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "api": ["./api"],
      "api/*": ["./api/*"],
      "containers": ["./containers"],
      "containers/*": ["./containers/*"],
      "components": ["./components"],
      "components/*": ["./components/*"],
      "hocs": ["./hocs"],
      "hocs/*": ["./hocs/*"],
      "pages": ["./pages"],
      "pages/*": ["./pages/*"],
      "shared": ["./shared"],
      "shared/*": ["./shared/*"],
      "store": ["./store"],
      "store/*": ["./store/*"],
      "types": ["./types"],
      "utils": ["./utils"]
    },
    "include": ["src"],
  }
}
